<%-include('../partials/header',{title: "Forgot Password" })%>
<div class="container d-flex flex-column justify-content-center align-items-center mt-5">
    <h3 class="card-title">Forgot Password</h3>
    <form action="/forgotPassword" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="text" id="email" name="email" autofocus required>
            <div class="invalid-feedback">
                Please enter email.
            </div>
        </div>
        <div class="mb-3 text-center">
            <button class="btn btn-success btn-block">Submit</button>
        </div>
    </form>
    <p>New to HireUp? <a href="/basicRegister">Sign Up</a></p>
</div>
<%-include('../partials/footer')%>
