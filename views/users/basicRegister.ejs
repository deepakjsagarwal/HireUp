<%-include('../partials/header',{title: "Register" })%>
    <div class="container d-flex flex-column justify-content-center align-items-center mt-5">
        <h3 class="card-title">Register</h3>
        <form id="userForm" action="/basicRegister" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="name" required autofocus>
                <div class="invalid-feedback">
                    Please give your name.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="text" id="email" name="email" autofocus required>
                <div class="invalid-feedback">
                    Please choose an email.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required>
                <div class="invalid-feedback">
                    Please choose a password.
                </div>
            </div>
            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-success">Register</button>
            </div>
        </form>
        <p>Already have an Account? <a href="/login">Login</a></p>
    </div>
    <%-include('../partials/footer')%>
